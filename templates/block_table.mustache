{{!
    @template block_superiframe/frame

    This template renders a url in an iframe of given size.

    Example context:
    {
        tableheaders: [heading 1, heading 2]
        tabledata: [ [item1row 1, item2row 1], [item2row1, item2row2] ]
    }
}}
<div class = "table-responsive">
    <table class = "table table-striped">
        {{! Using a get_string helper }}
        <caption>
            {{#str}}tablecaption, block_superframe{{/str}}
        </caption>
        <thead>
        {{#tableheaders}}
            <th>{{.}}</th>
        {{/tableheaders}}
        </thead>
        <tbody>
        {{#tabledata}}
            <tr>
                {{#.}}
                    <td>{{.}}</td>
                {{/.}}
            </tr>
        {{/tabledata}}
        </tbody>
    </table>
</div>